<!DOCTYPE html>
<html lang="zh-Hant-TW">
<head>
	<%= render :partial => "head" %>
	<!-- c3.css -->
	<link href="static/css/c3.css" rel="stylesheet" type="text/css">
	<link href="static/css/cropper.css" rel="stylesheet">

	<!-- style -->
	<link href="static/css/main.css" rel="stylesheet">

	<!-- d3.and c3.js -->
	<script src="static/js/d3.min.js"></script>
	<script src="static/js/c3.min.js"></script>

	<!-- moment and pikaday js -->
	<script src="static/js/moment.js"></script>
	<script src="static/js/pikaday.js"></script>

	<!--[if lt IE 9]>
	<script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
	<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->
</head>
<body>
	<div class="wrapper" id="top">
		<%= render :partial => "header" %>
		<!-- content
		================================================== -->
		<div class="content">
			<% if content_for? :fullpage %>
				<%= yield :fullpage %>
				<% else %>
			  <div class="inner">
					<%= yield %>
			  </div> <!-- /inner -->
			<% end %>
		</div> <!-- /content -->
	  <%= render :partial => "footer" %>
		<%= render :partial => "player" %>
		<%= render :partial => "modal-login" %>
		<%= render :partial => "modal-apply" %>
		
		<!-- addthis js -->
		<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-581fdf5ceac27020"></script>

		<!-- * Only for prototype, do not add in the prodution files -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
		<script src="static/js/prototype.js"></script>
		
	</div> <!-- /wrapper -->
</body>
</html>